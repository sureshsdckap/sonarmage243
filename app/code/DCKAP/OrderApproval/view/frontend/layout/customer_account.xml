<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Dckap\Theme\Block\Menu" name="customer-account-navigation-review-pending-orders">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Pending Approval</argument>
                    <argument name="path" xsi:type="string">orderapproval/index/pendingorders</argument>
                    <argument name="sortOrder" xsi:type="number">211</argument>
                </arguments>
            </block>
            <block class="Dckap\Theme\Block\Menu" name="customer-account-navigation-submitted-orders">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Submitted Orders</argument>
                    <argument name="path" xsi:type="string">orderapproval/index/submittedorders</argument>
                    <argument name="sortOrder" xsi:type="number">212</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>