<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="amasty_coupons_same_rule" resource="default" engine="innodb"
           comment="Additional data table for Sales Rule with coupon configuration">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="rule_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Sales Rule link ID"/>
        <column xsi:type="boolean" name="allow_coupons_same_rule" nullable="false" default="false"
                comment="Is Allowed to Apply Multi Coupons"/>
        <column xsi:type="boolean" name="use_config_value" nullable="false" default="true"
                comment="Is Use Config Value of Is Allowed"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="AMASTY_COUPONS_SAME_RULE_RULE_ID">
            <column name="rule_id"/>
        </constraint>
    </table>
    <table name="quote" resource="checkout" comment="Sales Flat Quote">
        <column xsi:type="varchar" name="coupon_code" length="1024" nullable="true" comment="Coupon Code"/>
    </table>
</schema>
